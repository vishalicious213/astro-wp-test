---
import { getPosts } from "../scripts/getPosts"
import { decode } from "entities"

const { posts, total, totalPages } = await getPosts()
---
<section id="post-gallery" class="post-gallery" data-total-pages={totalPages}>
    {posts.map((post: any) => (
        <article class="post-thumb">
            <a href={`/blog/${post.slug}`}>
                <img 
                    class="thumb-img" 
                    loading="lazy" 
                    width="300"
                    height="300"
                    src={post.jetpack_featured_media_url || "/no-featured-img.webp"} 
                    alt={post.title.rendered}
                />
                <div class="thumb-details">
                    <p class="thumb-date">{post.date.toString().slice(0,10)}</p>
                    <h2 class="thumb-title">{post.title.rendered}</h2>
                </div>
            </a>
        </article>
    ))}
</section>

<div id="scroll-trigger" style="height: 1px;"></div>

<p id="loading" class="loading" style="text-align:center; display:none;">Loading more postsâ€¦</p>
<p id="end" class="end" style="text-align:center; display:none;">You've reached the end!</p>

<script src="/scripts/infiniteScroll.js" type="module"></script>

<style is:global>
    .post-gallery {
        display: flex;
        flex-wrap: wrap;
        background: black;
    }

    .post-thumb {
        position: relative;
        width: 100%;
        min-height: 33vh;
    }

    /* hidden red overlay that will appear when post is hovered */
    .post-thumb::before {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(255, 0, 0, 0.4); /* Red tint */
        opacity: 0;
        transition: opacity 0.3s ease;
        pointer-events: none;
        z-index: 1;
    }

    .post-thumb:hover::before {
        opacity: 1;
    }

    .thumb-img {
        width: 100%;
        min-height: 33vh;
        object-fit: cover;
    }

    .thumb-details {
        position: absolute;
        bottom: .5rem;
        width: 100%;
        z-index: 2;
        color: white;
        padding: 0 1rem;
        text-align: center;
        background: rgba(0, 0, 0, .3);
        box-sizing: border-box;
    }

    .thumb-date {
        color: white;
        font-size: .75rem;
        margin-bottom: .25rem;
        width: 100%;
    }

    .thumb-title {
        text-transform: uppercase;
        font-weight: 400;
        font-size: 1rem;
        margin-top: 0;
    }

    .end, .loading {
        width: 100%;
        background: #28282B;
        color: white;
        padding: 1rem;
    }

    /* MEDIA QUERIES */

    @media screen and (min-width: 570px) {
        .post-thumb {
            width: 50%;
        }
    }

    @media screen and (min-width: 1024px) {
        .post-thumb {
            width: 33%;
        }
    }

    @media screen and (min-width: 1440px) {
        .post-thumb {
            width: 25%;
        }
    }
</style>