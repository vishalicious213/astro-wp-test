---
import { getPosts } from "../scripts/getPosts"
import { decode } from "entities"

const { posts, total, totalPages } = await getPosts()
---
<section id="post-gallery" class="post-gallery" data-total-pages={totalPages}>
    {posts.map((post: any) => (
        <section class="post-thumb">
            <a href={`/blog/${post.slug}`}>
                <img 
                    class="thumb-img" 
                    src={post.jetpack_featured_media_url} 
                    alt={post.title.rendered}
                />
                <div class="thumb-details">
                    <p class="thumb-date">{post.date.toString().slice(0,10)}</p>
                    <h2 class="thumb-title">{post.title.rendered}</h2>
                </div>
            </a>
        </section>
    ))}
</section>

<p id="loading" style="text-align:center; display:none;">Loading more postsâ€¦</p>
<p id="end" style="text-align:center; display:none;">You've reached the end!</p>

<script type="module">
    window.addEventListener('DOMContentLoaded', () => {
        const gallery = document.getElementById('post-gallery')
        const loading = document.getElementById('loading')
        const end = document.getElementById('end')
        const totalPages = Number(gallery.dataset.totalPages)

        let currentPage = 1
        let isLoading = false

        async function loadMorePosts() {
            if (isLoading || currentPage >= totalPages) return
            isLoading = true
            loading.style.display = 'block'

            const res = await fetch(`https://public-api.wordpress.com/wp/v2/sites/neophyte.home.blog/posts?per_page=12&page=${currentPage + 1}`)
            const newPosts = await res.json()
            currentPage++

            newPosts.forEach(post => {
                const section = document.createElement('section')
                section.className = 'post-thumb'

                section.innerHTML = `
                    <a href="/blog/${post.slug}">
                    <img class="thumb-img" src="${post.jetpack_featured_media_url}" alt="${post.title.rendered}" />
                    <div class="thumb-details">
                        <p class="thumb-date">${post.date.slice(0,10)}</p>
                        <h2 class="thumb-title">${post.title.rendered}</h2>
                    </div>
                    </a>
                `
                gallery.appendChild(section)
            })

            loading.style.display = 'none'

            if (currentPage >= totalPages) {
                end.style.display = 'block'
            }

            isLoading = false
        }

        function handleScroll() {
            if (window.innerHeight + window.scrollY >= document.body.offsetHeight - 300) {
                loadMorePosts()
            }
        }

        window.addEventListener('scroll', handleScroll)
    })
</script>

<style is:global>
    .post-gallery {
        display: flex;
        flex-wrap: wrap;
        background: black;
        /* margin-top: 1rem; */
    }

    .post-thumb {
        position: relative;
        min-height: 33vh;
    }

    /* hidden red overlay that will appear when post is hovered */
    .post-thumb::before {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(255, 0, 0, 0.4); /* Red tint */
        opacity: 0;
        transition: opacity 0.3s ease;
        pointer-events: none;
        z-index: 1;
    }

    .post-thumb:hover::before {
        opacity: 1;
    }

    .thumb-img {
        width: 100%;
        min-height: 33vh;
        object-fit: cover;
    }

    .thumb-details {
        position: absolute;
        bottom: 0;
        width: 100%;
        color: white;
        padding: 0 1rem;
        text-align: center;
        background: rgba(0, 0, 0, .3);
        box-sizing: border-box;
    }

    .thumb-details {
        position: absolute;
        bottom: 0;
        width: 100%;
        z-index: 2;
    }

    .thumb-date {
        color: white;
        font-size: .75rem;
        margin-bottom: .25rem;
    }

    .thumb-title {
        text-transform: uppercase;
        font-weight: 400;
        font-size: 1rem;
        margin-top: 0;
    }

    /* MEDIA QUERIES */

    @media screen and (min-width: 570px) {
        .post-thumb {
            width: 50%;
        }
    }

    @media screen and (min-width: 1024px) {
        .post-thumb {
            width: 33%;
        }
    }

    @media screen and (min-width: 1440px) {
        .post-thumb {
            width: 25%;
        }
    }
</style>