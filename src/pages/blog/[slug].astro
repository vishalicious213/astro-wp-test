---
import { getPosts } from "../../scripts/index"

export async function getStaticPaths() {
    const posts = await getPosts()

    return posts.map((post: any) => ({
        params: { slug: post.slug },
        props: { post },
    }))
}

const { post }: { post: any } = Astro.props
---

<html>
    <head>
        <title>{post.title.rendered}</title>
    </head>

    
    <body>
        <article>
            <img class="featured-img" src={post.jetpack_featured_media_url} alt="">
            <h1 class="post-title">{post.title.rendered}</h1>
            <div class="post-content" set:html={post.content.rendered}></div>
        </article>
    </body>
</html>

<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: Verdana, Geneva, Tahoma, sans-serif;
    }

    article {
        position: relative;
    }

    .featured-img {
        width: 100%;
        height: auto;
        min-height: 75vh;
        object-fit: cover;
    }

    .post-title {
        position: absolute;
        top: 2rem;
        left: 0;
        right: 0;
        color: white;
        background: rgba(0, 0, 0, .3);
        font-size: 2rem;
        font-weight: 500;
        text-transform: uppercase;
        text-align: center;
        padding: 1rem;
        margin: auto;
        max-width: 600px;
    }

/* .POST-CONTENT is injected raw HTML from WP, not scoped with Astro classes */
/* This is why we need :global & a class to target them but not spill out */

    :global(.post-content) {
        margin: 1rem auto;
        padding: 0 1rem;
        max-width: 800px;
    }

    :global(.post-content h2) {
        font-size: 1.75rem;
        font-weight: 500;
        text-transform: uppercase;
        margin-bottom: 1rem;
    }

    :global(.post-content p) {
        margin-bottom: 1rem;
        font-size: .9rem;
    }

    :global(.post-content a) {
        word-wrap: break-word;
        color: #AB1226;
    }

    :global(.post-content code) {
        display: inline-block;
        background: #F2F2F2;
        padding: 1rem;
        text-wrap: wrap;
        word-wrap: break-word;
        font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
        font-size: .8rem;
        width: 90%;
        line-height: 1.5;
    }
</style>